<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_margin="1dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/imagethere"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Green Tea Latte"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rating" />

                <TextView
                    android:id="@+id/vote"
                    android:layout_width="94dp"
                    android:layout_height="23dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="10 votes" />
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:paddingTop="6dp"
                android:text="â‚¹265"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/discription"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="0dp"
                android:maxLines="3"
                android:text="Our dark, Rich in flavour espresso balanced with steamed milk and a light layer of foam." />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
