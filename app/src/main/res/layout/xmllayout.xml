<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        app:srcCompat="@drawable/img"
        android:scaleType="centerCrop"
        android:id="@+id/imagethere"
        android:layout_width="125dp"
        android:layout_height="147dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="147dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Green Tea Latte"
            android:textColor="#000000"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                app:srcCompat="@drawable/rating"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:layout_width="95dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/vote"
                android:layout_gravity="top"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="10dp"
                android:text="10 votes" />
        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:text= "â‚¹265"
            android:textSize="19dp"
            android:paddingTop="6dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/discription"
            android:text="Our dark, Rich in flavour espresso balanced with steamed milk and a light layer of foam."
            android:layout_width="match_parent"
            android:maxLines="3"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>